@model Lab1.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "OrderSuccess";
}

<h1>OrderSuccess</h1>

<div class="row">
    <div class="col-sm-12 col-md-4">

    <div class="card bg-light">

    <div class="card-header">
        @Html.LabelFor(modelItem => modelItem.Order.Id)
        @Html.DisplayFor(modelItem => modelItem.Order.Id)
    </div>
        <div class="card-body">
    <div class="card-text">
        <div>
            @Html.LabelFor(modelItem => modelItem.Order.Date)
            @Html.DisplayFor(modelItem => modelItem.Order.Date)
        </div>
        <h4>Shipping address</h4>
        <div>
            @Html.DisplayFor(modelItem => modelItem.User.FirstName)
            @Html.DisplayFor(modelItem => modelItem.User.LastName)
        </div>
        <div>
            @Html.DisplayFor(modelItem => modelItem.User.StreetAddress)
        </div>
        <div>
            @Html.DisplayFor(modelItem => modelItem.User.PostalCode)
            @Html.DisplayFor(modelItem => modelItem.User.City)
        </div>

        <div>
            @Html.LabelFor(modelItem => modelItem.User.PhoneNumber)
            @Html.DisplayFor(modelItem => modelItem.User.PhoneNumber)
        </div>

        </div>
    </div>
    </div>
    </div>

<div class="col-sm-12 col-md-8">
        <table class="table table-responsive-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => new OrderRow().Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => new OrderRow().Product.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => new OrderRow().Amount)
                </th>

            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Order.OrderRows) 
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
        
   
            </tr>
    }
        </tbody>
        <tfoot>
         <tr>
                <td colspan="3">           
                        @Html.LabelFor(modelItem => modelItem.Order.TotalPrice)
                        @Html.DisplayFor(modelItem => modelItem.Order.TotalPrice)              
                </td>
            </tr>
        </tfoot>
    </table>
   </div>
</div>


